{
    "version": 3,
    "configurePresets": [
        {
            "name": "windows-base",
            "description": "Visual Studio 開発環境のある Windows をターゲットにします。",
            "hidden": true,
            "generator": "Ninja",
            "binaryDir": "${sourceDir}/out/build/${presetName}",
            "installDir": "${sourceDir}/out/install/${presetName}",
            "cacheVariables": {
                "CMAKE_C_COMPILER": "cl.exe",
                "CMAKE_CXX_COMPILER": "cl.exe"
            },
            "condition": {
                "type": "equals",
                "lhs": "${hostSystemName}",
                "rhs": "Windows"
            }
        },
        {
            "name": "x64-debug",
            "displayName": "x64 Debug",
            "description": "Visual Studio 開発環境を使用して Windows (64 ビット) をターゲットにします。(Debug)",
            "inherits": "windows-base",
            "architecture": {
                "value": "x64",
                "strategy": "external"
            },
            "cacheVariables": { "CMAKE_BUILD_TYPE": "Debug" }
        },
        {
            "name": "x64-release",
            "displayName": "x64 Release",
            "description": "Visual Studio 開発環境を使用して Windows (64 ビット) をターゲットにします。(RelWithDebInfo)",
            "inherits": "x64-debug",
            "cacheVariables": { "CMAKE_BUILD_TYPE": "Release" }
        },
        {
            "name": "x64-debug-with-example",
            "displayName": "x64 Debug With Example",
            "inherits": "windows-base",
            "architecture": {
                "value": "x64",
                "strategy": "external"
            },
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Debug",
                "DIVISI_BUILD_EXAMPLE": true
            }
        },
        {
            "name": "x64-release-with-example",
            "displayName": "x64 Release With Example",
            "inherits": "windows-base",
            "architecture": {
                "value": "x64",
                "strategy": "external"
            },
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Release",
                "DIVISI_BUILD_EXAMPLE": true
            }
        },
        {
            "description": "Visual Studio 開発環境を使用して Windows (64 ビット) をターゲットにします。(RelWithDebInfo)",
            "displayName": "Test",
            "inherits": "x64-release",
            "name": "Test",
            "cacheVariables": {
                "ENABLE_TEST":  true
            } 
        },
        {
            "description": "Visual Studio 開発環境を使用して Windows (64 ビット) をターゲットにします。(RelWithDebInfo)",
            "displayName": "Test_Debug",
            "inherits": "x64-debug",
            "name": "Test_Debug",
            "cacheVariables": {
                "ENABLE_TEST":  true
            } 
        }
    ]
}